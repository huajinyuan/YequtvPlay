<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_40"
        android:background="@drawable/shape_round_white" />

    <LinearLayout
        android:id="@+id/lin_mianlogin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:paddingLeft="@dimen/dp_60"
        android:paddingRight="@dimen/dp_60"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ登录"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/shape_roundconner_pink"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_roundconner_green"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微博登录"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_roundconner_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:text="手机登录"
            />

    </LinearLayout>


</LinearLayout>
